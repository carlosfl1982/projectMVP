{
  "footer": {
    "title": "Footer",
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "newsletter",
      "flex-layout.row#footer-info-geral-desktop",
      "flex-layout.row#payment",
      "flex-layout.row#corebiz",
      "flex-layout.row#end"
    ]
  },
  "footer-layout.mobile": {
    "children": [
      "newsletter",
      "flex-layout.row#footer-info-geral-mobile",
      "flex-layout.row#payment",
      "flex-layout.row#corebiz",
      "flex-layout.row#end"
    ]
  },

  "rich-text#whats": {
    "props": {
      "textAlignment": "",
      "textPosition": "",
      "text": "<a href='https://api.whatsapp.com/send/?phone=528123516562&text=Necesito+ayuda+con&app_absent=0' target='_blank'><img src='https://lamparayamx.vtexassets.com/arquivos/whats.png'></a>",
      "blockClass": "fixed-whats"
    }
  },

  "flex-layout.row#footer-info-geral-desktop": {
    "title": "Footer - Menu",
    "children": [
      "vtex.menu@2.x:menu#footer-1",
      "vtex.menu@2.x:menu#footer-2",
      "vtex.menu@2.x:menu#footer-3",
      "vtex.menu@2.x:menu#footer-4"
    ]
  },
  
  "flex-layout.row#footer-info-geral-mobile": {
    "title": "Footer - Menu Mobile",
    "children": [
      "logo#space",
      "vtex.menu@2.x:menu#footer-1",
      "vtex.menu@2.x:menu#footer-2",
      "vtex.menu@2.x:menu#footer-3",
      "vtex.menu@2.x:menu#footer-4"
    ]
  },
  "logo#space":{
    "props":{
      "width":"8%"
    }
  },

  "flex-layout.row#payment":{
    "children": [
      "image#pay"
    ],
    "props": {
      "blockClass": "pay-methods",
      "marginTop": 5
    }
  },
  "image#pay": {
    "props": {
      "maxWidth": "100%",
      "maxHeight": "33px",
      "src": "/arquivos/metodos-pago-nuevo.png"
    }
  },
   
  "flex-layout.row#corebiz": {
    "children": [
      "image#corebiz"
    ],
    "props": {
      "blockClass": "row-corebiz"
    }
  },
  "image#corebiz": {
    "props": {
      "maxWidth": "7%",
      "src": "/arquivos/corebiz.png"
    }
  },

  "flex-layout.row#end": {
    "children": [
      "rich-text#end"
    ],
    "props": {
      "blockClass": "row-end"
    }
  },
  "rich-text#end": {
    "title": "Texto Informação Superior",
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "© 2020 Copyright. Todos los derechos reservados www.lamparaya.com.mx. | Marca registrada.",
      "blockClass": "txt-end"
    }
  },
  "newsletter": {
    "title": "Newsletter",
    "props": {
        "blockClass": "footer-newsletter",
        "label": "¡Regístrate a Nuestro Newsletter!",
        "placeholder": "Escribe tu correo",
        "submit": "SUSCRIBIR"
    }
  }

}
